<section class="section overflow-hidden">
    <a id="login"></a>
    <div class="container">
        <div class="row">
            <div class="col-md-6 pr-lg-5">
                <h2 class="section-title" data-aos="fade-up" data-aos-delay="200">Reset your password</h2>
                <p>Fill in the code we sent you and a new strong password generated by your newly installed password manager.</p>
                <form action="/Home/ResetPassword" method="post" style="margin-bottom: 20px;">
                    <div class="mb-3">
                        <label for="Code" class="form-label">Reset code</label>
                        <input type="text" autocomplete="off" class="form-control shadow rounded" name="Code" id="Code">
                    </div>
                    <div class="mb-3">
                        <label for="Password" class="form-label">New Password</label>
                        <input type="password" autocomplete="off" class="form-control shadow rounded" name="Password" id="Password">
                    </div>
                    <input type="submit" class="btn btn-primary" value="Reset password" />
                </form>
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
                }

                @if (ViewBag.Ok != null)
                {
                    <div class="alert alert-success" role="alert">@ViewBag.Ok</div>
                }
            </div>
            <div class="col-md-6 pl-lg-5">
                <img src="/images/bitwarden.webp" class="img-fluid" alt="dashboard" data-aos="fade-left" data-aos-delay="200">
            </div>
        </div>
    </div>
</section>
